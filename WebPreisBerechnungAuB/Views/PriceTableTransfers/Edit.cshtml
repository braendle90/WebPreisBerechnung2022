@model WebPreisBerechnungAuB.Models.ViewModel.PriceTableTransferVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PriceTableTransfer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="form-group-text">@Html.DisplayNameFor(m => m.TexilList.FirstOrDefault().TextilName)</label>
                <select name="Texil.Id" id="TexilId" class="custom-select" asp-items="@(new SelectList(Model.TexilList,"Id","TextilName",Model.TexilList.Select(x => x.Id == 2)))"></select>
                <span asp-validation-for="@Model.TexilList.FirstOrDefault().TextilName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label class="form-group-text">@Html.DisplayNameFor(m => m.RangeLogoList.FirstOrDefault().RangeName)</label>
                <select name="RangeLogo.Id" id="RangeId" class="custom-select" asp-items="@(new SelectList(Model.RangeLogoList,"Id","RangeName",Model.RangeLogoList.Select(x => x.Id == 2)))"></select>
                <span asp-validation-for="@Model.RangeLogoList.FirstOrDefault().RangeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

