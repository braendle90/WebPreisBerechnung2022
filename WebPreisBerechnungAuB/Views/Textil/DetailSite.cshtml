@model WebPreisBerechnungAuB.Models.Article

@{
    ViewData["Title"] = "DetailSite";
}



<div>
    <h4>Artikel</h4>
    <br />

    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">

                    <img src="https://shop.l-shop-team.at/out/pictures/generated/product/1/665_665_75/225177.jpg" class="card-img-top" alt="...">

                </div>
                <div class="col-sm-8">

                    <h2 style="display: inline-block;">@Model.Name</h2>
                    <div id="detailsTabs" class="product-details-tablist-container">
                    </div>

                    <br />


                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs" id="bologna-list" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#description" role="tab" aria-controls="description" aria-selected="true">Beschreibung</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#history" role="tab" aria-controls="history" aria-selected="false">Informationen</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#deals" role="tab" aria-controls="deals" aria-selected="false">Hersteller</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">

                            <div class="tab-content mt-3">
                                <div class="tab-pane active" id="description" role="tabpanel">

                                    <ul class="list-group list-group-flush">



                                        @{
                                            foreach (var item in Model.Descriptions)
                                            {
                                                <li class="list-group-item">
                                                    <h6>@item</h6>

                                                </li>



                                            }
                                        }

                                    </ul>
                                </div>

                                <div class="tab-pane" id="history" role="tabpanel" aria-labelledby="history-tab">
                                    <p class="card-text">First settled around 1000 BCE and then founded as the Etruscan Felsina about 500 BCE, it was occupied by the Boii in the 4th century BCE and became a Roman colony and municipium with the name of Bononia in 196 BCE. </p>
                                    <a href="#" class="card-link text-danger">Read more</a>
                                </div>

                                <div class="tab-pane" id="deals" role="tabpanel" aria-labelledby="deals-tab">
                                    <p class="card-text">Immerse yourself in the colours, aromas and traditions of Emilia-Romagna with a holiday in Bologna, and discover the city's rich artistic heritage.</p>
                                    <a href="#" class="btn btn-danger btn-sm">Get Deals</a>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>





            </div>

            <br />

            <p align="center" class="variantstitle"><strong>Bitte wählen Sie eine Farbe aus.</strong></p>

            <div class="row">

                <div class="container">

                    <ul style=" flex-wrap: wrap;" class="list-group list-group-horizontal">


                        @foreach (var item in @Model.ArticleColors)
                        {
                            <li style="display: inline-block; vertical-align: top;width: 10%; margin-left: 2%;" class="list-item">
                                <a href="#">
                                    <div style="display: table; width: 100% ;background: @item.HexColor; height: 50px;" class="field">
                                        <span style="background: #253E33;"></span>
                                    </div>
                                    <div style="white-space: normal;color: gray;text-align: left;padding-left: 0;line-height: 1.4em;display: inline-block;" class="label">
                                        @item.Name
                                    </div>
                                </a>

                                </li>

                                }


                        </ul>

                    </div>


                </div>

            </div>


        </div>


    </div>


